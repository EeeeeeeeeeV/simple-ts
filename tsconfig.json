{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "lib": ["ES6", "DOM"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "rootDir": "src",
        "sourceMap": true,
        "strict": true,
        "target": "ES5",
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}